@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<OurWorkList>
@using Umbraco.Cms.Core.Models;
@using Umbraco.Cms.Web.Common.Models;
@using Core.Helper;

@if (Model != null)
{
    var ourWork = Model.Value<IEnumerable<IPublishedElement>>("ourWork");

    @if (ourWork != null)
    {<section id="works" class="section">
            <!-- Filtering -->
            <div class="title-box text-center">
                <h2 class="title">Our Work</h2>
            </div>

            @if (ourWork != null)
            {
                <div class=" col-md-12 text-center">
                    <!-- Filtering -->
                    <ul class="filtering">
                        @foreach (OurWorkNclist item in ourWork)
                        {
                            @if (!string.IsNullOrEmpty(item.Title))
                            {
                                <li class="filter" data-filter="@item.Title.ToLower()">@item.Title</li>
                            }
                        }
                    </ul>
                </div>
            }
            @if (ourWork != null)
            {
                <div class="work-main">
                    @foreach (var item in ourWork)
                    {
                        var partialView = HelperServices.GetPartial(item);
                        @await Html.PartialAsync(partialView, item)
                    }
                </div>
            }
        </section>
    }

}





