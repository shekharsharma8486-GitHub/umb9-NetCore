@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<TabbingAndAccordionSection>
@using Umbraco.Cms.Core.Models;
@using Umbraco.Cms.Web.Common.Models;
@using Core.Helper;
@if (Model != null)
{
     var tabbingAndAccordionList = Model.Value<IEnumerable<IPublishedElement>>("tabbingAndAccordionList");

<section id="why-choose" class="section">
    <div class="container">
        <div class="row">
            <div class="title-box text-center">
                @if (string.IsNullOrEmpty(Model.Title))
                {
                    <h2 class="title">@Model.Title</h2>
                }
            </div>
            @if (@tabbingAndAccordionList != null)
            {
                @foreach (var item in tabbingAndAccordionList)
                {
                        var partialView = HelperServices.GetPartial(item);
                        @await Html.PartialAsync(partialView, item)
                  
                }
            }


        </div> 
    </div> 
</section>
}
